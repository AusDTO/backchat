<div class="landing-page">
	<div class="site-wrapper">

	  <div class="site-wrapper-inner">

	    <div class="cover-container">

	      <div class="masthead clearfix">
	        <div class="inner">
	          <h3 class="masthead-brand"><%= APP_CONFIG["app_name"] %></h3>
	          <!--<nav>
	            <ul class="nav masthead-nav">
	              <li class="active"><a href="#">Home</a></li>
	              <li><a href="#">About</a></li>
	            </ul>
	          </nav>-->
	        </div>
	      </div>

	      <div class="inner cover">
	        <h1 class="cover-heading">Welcome</h1>
	        <p class="lead">Backchat is a unified user feedback/contact system allowing simple HTML form POSTs to become quantifiable and actionable user feedback.<p class="lead">
	          <% if !current_user %>
	          	<%= link_to "Sign Up", new_user_registration_path, class: "uikit-btn uikit-btn--dark" %> <%= link_to "Sign In", new_user_session_path, class: "uikit-btn uikit-btn--secondary uikit-btn--dark" %>
						<% else %>
							<h3>Welcome <%= current_user.email %></h3>
							<p><%= link_to "Update Profile", edit_user_path(id: current_user.id), class: "btn btn-default"%> 
								<%= link_to "Edit Account", edit_user_registration_path, class: "btn btn-default"%> 
								<%= link_to 'Logout', destroy_user_session_path, :method => :delete , class: "btn btn-danger" %>
							</p>
						<% end %>
	        </p>
	      </div>

	      <div class="mastfoot">
	        <div class="inner">
	          <large><a href="https://github.com/AusDTO/backchat"><span class="fa fa-github"></span></a></large>
	        </div>
	      </div>

	    </div>

	  </div>

	</div>
</div>