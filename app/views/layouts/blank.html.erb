<!DOCTYPE html>
<html>
	<%= render 'layouts/head' %>
	<body>

		<div class="container">
			<div class="row">
				<div class="col-xs-12">
					<% if notice %>
						<p class="notice"><%= notice %></p>
					<% end %>
					<% if alert %>
						<p class="alert"><%= alert %></p>
					<% end %>
				</div>
			</div>
		</div>

		<%= yield %>

	</body>
</html>