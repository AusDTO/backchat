<% if current_user %>
    <header role='banner'>
  <div class='controls--contrast'>
    <div class='wrapper'>
      <section class='left'>
        <nav class='controls'>

        </nav>
      </section>
      <section class='right'>
        <ul class='inline-links--inverted'>
          <% if current_user %>
              <!-- User actions in dropdown -->
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><img src="//www.gravatar.com/avatar/<%= @email_hash %>?s=23" title="Gravatar" class="gravatar"> <%= current_user.email %><span class="caret"></span></a>
                <ul class="dropdown-menu" role="menu">
                  <li><%= link_to "Profile", edit_user_path(id: current_user.id)%></li>
                  <li><%= link_to "Account", edit_user_registration_path %> </li>
                  <li class="divider"></li>
                  <li><%= link_to 'Logout', destroy_user_session_path, :method => :delete %></li>
                </ul>
              </li>
          <% end %>
        </ul>
      </section>
    </div>
  </div>

</header>
<% end %>