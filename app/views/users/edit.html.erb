<h2>Edit Profile Info</h2>
<% if @user.is_admin? %>
<% @user = User.find(params[:id]) %>
<% end %>
<%= form_for(@user, url: user_path(id: @user.id), html: { method: :put }) do |f| %>

  <div class="field">
    <%= f.label :name, "Name" %>
    <%= f.text_field :name %>
  </div>
    <div class="field">
      <%= f.label :email, "Email address" %>
      <%= f.text_field :email %>
    </div>
    <% if current_user.is_admin? %>
    <div class="field">
      <%= f.label :approved, "Approved account" %>
      <%= f.check_box :approved %>
    </div>
    <% end %>
  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

<%= link_to "Back", :back %>